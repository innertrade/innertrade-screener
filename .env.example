# =============================
# Core API service
# =============================
MODE=signals_5m
HTTP_PORT=8088
HOST=http://127.0.0.1:8088
KLINE_SOURCE=bybit
OI_SOURCE=bybit

# =============================
# Universe configuration
# =============================
UNIVERSE=
UNIVERSE_FILE=

# =============================
# Runtime tuning
# =============================
INTERVAL_MIN=5
WINDOW=48
POLL_SEC=8
HTTP_TIMEOUT=8.0
ADAPTIVE=1
SLEEP_BETWEEN_CALLS=0.2

# =============================
# Logging & verbosity
# =============================
LOG_LEVEL=INFO

# =============================
# Telegram credentials
# =============================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
MENU_BOT_TOKEN=
ADMINS=

# =============================
# Queue and file locations (override if repo is deployed elsewhere)
# =============================
QUEUE_DIR=/home/deploy/apps/innertrade-screener/inbox
PROCESSED_DIR=/home/deploy/apps/innertrade-screener/processed
FAILED_DIR=/home/deploy/apps/innertrade-screener/failed
PUSH_STATE_FILE=state/push_enabled.json
PUSH_STATUS_FILE=runtime/push_status.json
PUSH_LOG_FILE=push_signals.log

# =============================
# Gateway HTTP endpoint
# =============================
PORT=8787

# =============================
# Telegram forwarder fine-tuning
# =============================
FORWARD_TIMEOUT_CONNECT=5
FORWARD_TIMEOUT_READ=10
FORWARD_MAX_RETRIES=3
FORWARD_RETRY_SLEEP=1
TG_RESPECT_RETRY_AFTER=1
TG_THROTTLE_RPS=1
TG_THROTTLE_BURST=5
TG_TOKEN=
TG_CHAT_ID=

# =============================
# Misc
# =============================
PUSH_TEST=0
