[Unit]
Description=InnerTrade Screener Bot
After=network-online.target
Wants=network-online.target

[Service]
User=root
WorkingDirectory=/root/screener-bot
EnvironmentFile=/root/screener-bot/.env
ExecStart=/root/screener-bot/venv/bin/python main.py
Restart=always
RestartSec=3
# логи в journalctl
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
