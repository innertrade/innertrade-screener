[Unit]
Description=InnerTrade PRE/CONFIRM forwarder (/signals -> /tvoi)
After=network.target innertrade-api.service tvoi_gateway.service

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/home/deploy/apps/innertrade-screener
EnvironmentFile=/etc/innertrade/pre_forwarder.env
ExecStart=/home/deploy/apps/innertrade-screener/.venv/bin/python pre_forwarder.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
