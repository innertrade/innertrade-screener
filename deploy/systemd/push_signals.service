[Unit]
Description=InnerTrade Forwarder (signals -> Telegram)
After=network.target innertrade-api.service tvoi_gateway.service

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/home/deploy/apps/innertrade-screener
EnvironmentFile=/etc/innertrade/push_signals.env
ExecStart=/home/deploy/apps/innertrade-screener/.venv/bin/python -u push_signals.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
